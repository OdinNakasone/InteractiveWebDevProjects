extends layout

block content
  form(id='editForm' method='post' action='/edit/' + useAccount.id)
    p Username:
      input(type='text' name='username' value=useAccount.username)
    p Email:
      input(type='text' name='email' value=useAccount.email)
    p Password:
      input(type='text' name='password')
    p What is your favorite movie gerne:
      select(name='movie')
        option(select = useAccount.movie)=useAccount.movie

        option(value='Horror') Horror
        option(value='Comedy') Comedy
        option(value='Thriller') Thriller
        option(value='Action') Action
    p What is your normal mood:
      select(name='mood')
        option(select = useAccount.mood)=useAccount.mood

        option(value='Cheerful') Cheerful
        option(value='Gloomy') Gloomy
        option(value='Apathetic') Apathetic
        option(value='Envious') Envious
    p What is your favorite animal:
      select(name='animal')
        option(select = useAccount.animal)=useAccount.animal

        option(value='Water Bear') Water Bear
        option(value='Immortal Jellyfish') Immortal Jellyfish
        option(value='Sawfish') Sawfish
        option(value='Axolotl') Axolotl
    p
      input(type='submit' value='Update Account')
      a(href='/logout') Logout